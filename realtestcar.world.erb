<?xml version="1.0" ?>
<%
    grid = 5
    n = 0
    block = 25
    asphalt_positions = []
    while n < grid
        asphalt_positions << block
        block = block + 50
        n = n + 1
    end

%>

<sdf version="1.5">
  <world name="default">
    <gui>
      <camera name="user_camera">
        <pose>75 200 20 0 0.27 0.0</pose>
      </camera>
    </gui>
    <include>
       <uri>models/ground_plane</uri>
    </include>
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
        <uri>/models/sdcCar</uri>
        <pose>49 49 0 0 0 0</pose>
    </include>


<%   # Asphalt Planes
   x = -1
   y = 0
   while y < grid
       x = x + 1
       if x == grid
           if y == grid - 1
               break
           end
           x = 0
           y = y + 1
       end
       name = 'asphalt_plane_' + x.to_s + '_' + y.to_s
%>

  <%="<model name='#{name}'>" %>
    <pose><%= asphalt_positions[x]%> <%= asphalt_positions[y]%> 0 0 0 0</pose>
    <static>true</static>
    <link name="link">
      <collision name="collision">
        <geometry>
          <box>
            <size>45 45 3</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <cast_shadows>false</cast_shadows>
        <geometry>
          <box>
            <size>45 45 3</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>models/asphalt_plane/materials/scripts</uri>
            <uri>models/asphalt_plane/materials/textures</uri>
            <name>vrc/asphalt</name>
          </script>
        </material>
      </visual>
    </link>
  </model>
<%  end %>

<%    #Roads
    x = -1
    y = 0
    while y < grid
        x = x + 1
        if x == grid
            if y == grid - 1
                break
            end
            x = 0
            y = y + 1
        end
        name1 = 'road_1_' + x.to_s + '_' + y.to_s
        name2 = 'road_2_' + x.to_s + '_' + y.to_s
        name3 = 'intersection_' + x.to_s + '_' + y.to_s
%>


    <%="<model name='#{name1}'>" %>

      <pose><%= asphalt_positions[x]-25%> <%= asphalt_positions[y]%> 0 0 0 1.5707</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>45 5 .1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <cast_shadows>false</cast_shadows>
          <geometry>
            <box>
              <size>45 5 .1</size>
            </box>
          </geometry>
        <material>
            <script>
                <uri>model://comps_road/materials/scripts</uri>
                <uri>model://comps_road/materials/textures</uri>
                <name>comps_road</name>
            </script>
        </material>
      </visual>
    </link>
  </model>


    <%="<model name='#{name2}'>" %>
      <pose><%= asphalt_positions[x]%> <%= asphalt_positions[y]-25%> 0 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>45 5 .1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <cast_shadows>false</cast_shadows>
          <geometry>
            <box>
              <size>45 5 .1</size>
            </box>
          </geometry>
        <material>
            <script>
                <uri>model://comps_road/materials/scripts</uri>
                <uri>model://comps_road/materials/textures</uri>
                <name>comps_road</name>
            </script>
        </material>
      </visual>
    </link>
  </model>
