    <%="<model name='#{name3}'>" %>
      <pose><%= asphalt_positions[x]-25%> <%= asphalt_positions[y]-25%> 0 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>5 5 .1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <cast_shadows>false</cast_shadows>
          <geometry>
            <box>
              <size>5 5 .1</size>
            </box>
          </geometry>
        <material>
            <script>
                <uri>model://intersection/materials/scripts</uri>
                <uri>model://intersection/materials/textures</uri>
                <name>intersection</name>
            </script>
        </material>
      </visual>
    </link>
  </model>
<%  end %>

  </world>
</sdf>
