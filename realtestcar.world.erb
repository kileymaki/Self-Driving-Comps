    <%="<road name='#{name3}'>" %>
        <width>10</width>
        <point><%= asphalt_positions[x]-55%> <%= asphalt_positions[y]-50%> .1</point>
        <point><%= asphalt_positions[x]-45%> <%= asphalt_positions[y]-50%> .1</point>
        <material>
            <script>
                <uri>file://media/materials/scripts/gazebo.material</uri>
